<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>
            <!-- PENDAFTARAN USER RULE -->
            <record id="cdn_pendaftaran_record_rule" model="ir.rule">
                <field name="name">Training User Rule: Personal Data Only</field>
                <field name="model_id" ref="model_cdn_pendaftaran"/>
                <field name="domain_force">[('create_uid', '=', user.id)]</field> 
                <field name="groups" eval="[(4, ref('group_training_user'))]"/>
            </record>

            <!-- PENDAFTARAN MANAGER RULE -->
            <record id="cdn_pendaftaran_manager_record_rule" model="ir.rule">
                <field name="name">Training Manager Rule: All Data</field>
                <field name="model_id" ref="model_cdn_pendaftaran"/>
                <field name="domain_force">[(1, '=', 1)]</field> 
                <field name="groups" eval="[(4, ref('group_training_manager'))]"/>
            </record>

        </data>
</odoo>
