<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data>

            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Kota ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <!-- cdn.kota tree view -->
            <record id="cdn_kota_view_list" model="ir.ui.view">
                <field name="name">cdn.kota.view.list</field>
                <field name="model">cdn.kota</field>
                <field name="arch" type="xml">
                    <list>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="kode"/>
                        <field name="singkatan"/>
                        <field name="deskripsi"/>
                        <field name="propinsi_id"/>
                    </list>
                </field>
            </record>
        
        <!-- cdn.propinsi form view -->
        <record id="cdn_kota_view_form" model="ir.ui.view">
            <field name="name">cdn.kota.view.form</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="singkatan"/>
                            <field name="deskripsi"/>
                        </group>
                        
                         <notebook>
                            <page string="Data Kecamatan">
                                <field name="kecamatan_ids">
                                    <list editable="bottom" readonly="1">
                                        <field name="name"/>
                                        <field name="kode"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn.kota search view -->
        <record id="cdn_kota_view_search" model="ir.ui.view">
            <field name="name">cdn.kota.view.search</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    
                </search>
            </field>
        </record>

        <!-- cdn.kota action window -->
        <record id="cdn_kota_action" model="ir.actions.act_window">
            <field name="name">Data Kota</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kota</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <menuitem id="kota_menu_act" name="Data Kota" parent="wilayah_menu_categ" action="cdn_kota_action" sequence="20"/>

        </data>

</odoo>
