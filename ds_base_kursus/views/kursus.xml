<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data>
            <!-- cdn.kursus tree view -->
            <record id="cdn_kursus_view_list" model="ir.ui.view">
                <field name="name">cdn.kursus.view.list</field>
                <field name="model">cdn.kursus</field>
                <field name="arch" type="xml">
                    <list>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="harga_kursus"/>
                        <field name="user_id" widget="many2one_tags"/>
                        <field name="produk_kursus_id"/>
                    </list>
                </field>
            </record>
            

            <!-- FORM -->
            <record id="cdn_kursus_view_form" model="ir.ui.view">
            <field name="name">cdn.kursus.view.form</field>
            <field name="model">cdn.kursus</field>
            <field name="arch" type="xml">

                    <form>
                        <sheet>

                            <group>
                                <field name="name"/>
                                <field name="user_id" widget="many2one_tags"/>
                                <field name="produk_kursus_id"/>
                                <field name="harga_kursus"/>
                                <field name="biaya_konsumsi"/>
                            </group>

                            <notebook>

                                <!-- TAB SESI KURSUS -->
                                <page string="Sesi Kursus">
                                    <field name="session_line" nolabel="1">
                                        
                                        <list editable="bottom">
                                            <field name="name"/>
                                            <field name="tgl_mulai"/>
                                            <field name="durasi"/>
                                            <field name="seats"/>
                                        </list>

                                        <form string="Detail Sesi">
                                            <group>
                                                <field name="name"/>
                                                <field name="tgl_mulai"/>
                                                <field name="durasi"/>
                                                <field name="seats"/>
                                            </group>
                                        </form>

                                    </field>
                                </page>

                                <!-- TAB KETERANGAN -->
                                <page string="Keterangan">
                                    <group>
                                        <field name="deskripsi"/>
                                    </group>
                                </page>
                                <page name="peralatan" string="Peralatan">
                                    <field name="produk_ids">
                                        <list>
                                            <field name="name"/>
                                            <field name="product_template_variant_value_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                                            <field name="standard_price"/>
                                            <field name="lst_price"/>
                                        </list>
                                    </field>
                                </page>

                            </notebook>

                        </sheet>
                    </form>

                </field>
            </record>



            <!-- cdn.kursus action window -->
            <record id="cdn_kursus_action" model="ir.actions.act_window">
                <field name="name">Data Kursus</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">cdn.kursus</field>
                <field name="view_mode">list,form</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                        <!-- Add Text Here -->
                    </p><p>
                        <!-- More details about what a user can do with this object will be OK --> 
                    
                    </p>
                </field>
            </record>


            <!-- This Menu Item must have a parent and an action -->
            <menuitem id="kursus_menu_act" name="Kursus" parent="Pengaturan_menu_categ" action="cdn_kursus_action" sequence="10"/>
            <!-- This Menu Item must have a parent and an action -->
            <!-- <menuitem id="training_session_menu_act" name="Sesi Kursus" parent="Pengaturan_menu_categ" action="cdn_training_session" sequence="20"/> -->
        </data>

</odoo>





           