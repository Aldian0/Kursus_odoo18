<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data>

            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Desa ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <!-- cdn.desa tree view -->
            <record id="cdn_desa_view_list" model="ir.ui.view">
                <field name="name">cdn.desa.view.list</field>
                <field name="model">cdn.desa</field>
                <field name="arch" type="xml">
                    <list>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="kode"/>
                        <field name="deskripsi"/>
                        <field name="kecamatan_id"/>
                    </list>
                </field>
            </record>
        
        <!-- cdn.desa form view -->
        <record id="cdn_desa_view_form" model="ir.ui.view">
            <field name="name">cdn.desa.view.form</field>
            <field name="model">cdn.desa</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="deskripsi"/>
                            <field name="kecamatan_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn.desa search view -->
        <record id="cdn_desa_view_search" model="ir.ui.view">
            <field name="name">cdn.desa.view.search</field>
            <field name="model">cdn.desa</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    
                </search>
            </field>
        </record>

        <!-- cdn.kecamatan action window -->
        <record id="cdn_desa_action" model="ir.actions.act_window">
            <field name="name">Data Desa</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.desa</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <menuitem id="desa_menu_act" name="Data Desa" parent="wilayah_menu_categ" action="cdn_desa_action" sequence="40"/>

        </data>

</odoo>
