<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- cdn.peserta tree view -->
        <record id="cdn_peserta_view_list" model="ir.ui.view">
            <field name="name">cdn.peserta.view.list</field>
            <field name="model">cdn.peserta</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="jenis_kelamin"/>
                    <field name="street"/>
                    <field name="mobile"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- cdn.peserta form view -->
       <record id="cdn_peserta_view_form" model="ir.ui.view">
        <field name="name">cdn.peserta.view.form</field>
        <field name="model">cdn.peserta</field>
        <field name="arch" type="xml">
            <form string="Peserta">
                <header>
                    <button name="action_print_kartu_peserta" string="Cetak Kartu Peserta" type="object" class="btn-primary" icon="fa-print" modifiers="{'invisible': [('state', 'not in', ['confirm','done'])]}"/>
                </header>
                <sheet>

                        <!-- FOTO DI KANAN -->
                        <div>
                            <field name="image_1920" widget="image" class="oe_avatar" />
                        </div>

                        <div class="oe_title">
                            <h3>
                                <span class="o_form_label">No Peserta</span>
                            </h3>

                            <h1>
                                <field name="no_peserta" readonly="1"/>
                            </h1>
                        </div>

                        <!-- IDENTITAS SISWA -->
                        <group string="Identitas Siswa">
                            <group>
                                <field name="name" string="Nama Siswa"/>
                                <field name="jenis_kelamin" string="Jenis Kelamin" required="1"/>
                                <field name="email" string="Email"/>
                            </group>

                            <group>
                                <field name="tmp_lahir" string="Tempat Lahir"/>
                                <field name="tgl_lahir" string="Tanggal Lahir"/>
                                <field name="mobile" string="No HP"/>
                            </group>
                        </group>

                        <!-- TEMPAT TINGGAL SISWA -->
                        <group string="Tempat Tinggal Siswa">

                            <group>
                                <field name="street" string="Alamat"/>
                                <field name="propinsi_id" string="Propinsi"/>
                                <field name="kota_id" string="Kota"
                                    domain="[('propinsi_id','=',propinsi_id)]"/>
                            </group>

                            <group>
                                <field name="kecamatan_id" string="Kecamatan"
                                    domain="[('kota_id','=',kota_id)]"/>
                                <field name="desa_id" string="Kelurahan"
                                    domain="[('kecamatan_id','=',kecamatan_id)]"/>
                                <field name="pekerjaan" string="Pekerjaan"/>
                            </group>

                        </group>

                        <!-- PENDIDIKAN & STATUS -->
                        <group>
                            <field name="pendidikan" string="Pendidikan"/>
                            <field name="is_menikah" string="Sudah Menikah"/>
                        </group>

                        <!-- IDENTITAS PASANGAN -->
                        <group string="Identitas Pasangan" invisible="not is_menikah">

                            <group>
                                <field name="nama_pasangan" string="Nama Pasangan" required="is_menikah"/>
                            </group>
                        
                            <group>
                                <field name="hp_pasangan" string="No HP Pasangan" required="is_menikah"/>
                            </group>
                            
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record id="cdn_peserta_laki_action" model="ir.actions.act_window">
            <field name="name">Peserta Laki-laki</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.peserta</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('jenis_kelamin','=','l')]</field>
            <field name="context">{'default_jenis_kelamin':'l'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="cdn_peserta_perempuan_action" model="ir.actions.act_window">
            <field name="name">Peserta Perempuan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.peserta</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('jenis_kelamin','=','p')]</field>
            <field name="context">{'default_jenis_kelamin':'p'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="laki_laki_menu_act"
                  name="Peserta Laki Laki"
                  parent="Pengaturan_menu_categ"
                  action="cdn_peserta_laki_action"
                  sequence="40"/>

        <menuitem id="perempuan_menu_act"
                  name="Peserta Perempuan"
                  parent="Pengaturan_menu_categ"
                  action="cdn_peserta_perempuan_action"
                  sequence="50"/>

    </data>
</odoo>

