<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>
            <!-- Training Session -->
            <!-- cdn.training.session tree view -->
            <record id="cdn_training_session_view_list" model="ir.ui.view">
                <field name="name">cdn.training.session.view.list</field>
                <field name="model">cdn.training.session</field>
                <field name="arch" type="xml">
                    <list string="Training Session" decoration-danger="seats == 0">
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="tgl_mulai"/>
                        <field name="durasi"/>
                        <field name="seats"/>
                        <field name="state"/>
                        <field name="kursus_id"/>
                    </list>
                </field>
            </record>

            <!-- cdn.training.session form view -->
            <record id="cdn_training_session_view_form" model="ir.ui.view">
                <field name="name">cdn.training.session.view.form</field>
                <field name="model">cdn.training.session</field>
                <field name="arch" type="xml">
                    <form string="">
                            <header>
                                <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'" />
                                <button name="action_done" string="Done" type="object" class="btn-primary" invisible="state != 'confirm'" />
                                <button name="action_reset" string="Reset Status" type="object" class="btn-secondary" invisible="state == 'draft'" />   
                                <field name="state" widget="statusbar"/>
                            </header>
                        <sheet>
                            <widget name="web_ribbon" bg_color="bg-info" text="Selesai" invisible="state != 'done'" />

                            <!-- Informasi Kursus -->
                            <group string="Informasi Kursus">
                                <group>
                                    <field name="name" string="Pokok Bahasan" readonly="state != 'draft'"/>
                                    <field name="kursus_id" readonly="state != 'draft'"/>
                                    <field name="tgl_mulai" readonly="state != 'draft'"/>
                                </group>

                                <group>
                                    <field name="durasi" string="Durasi Jam" readonly="state != 'draft'"/>
                                    <!-- <field name="jml_peserta" string="Jumlah Peserta"/> -->
                                    <field name="seats" string="Jumlah Kursi" readonly="state != 'draft'"/>
                                </group>
                            </group>

                            <!-- Data Instruktur -->
                            <group string="Informasi Instruktur">
                                <group>
                                    <field name="instruktur_id" modifiers="{'readonly': [('state', '=', 'done')]}"/>
                                    <field name="no_hp" />
                                </group>
                                <group>
                                    <field name="email" />
                                    <field name="jenis_kelamin" />
                                </group>
                            </group>

                            <!-- Peserta -->
                            <notebook>
                                <page string="Peserta">
                                    <field name="peserta_ids" readonly="state != 'draft'">
                                        <list>
                                            <field name="name"/>
                                            <field name="jenis_kelamin"/>
                                            <field name="mobile"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>     
                        <chatter />
                    </form>
                </field>
            </record>

            <!-- cdn.training.session calendar view -->
            <record id="cdn_training_session_view_calendar" model="ir.ui.view">
                <field name="name">cdn.training.session.view.calendar</field>
                <field name="model">cdn.training.session</field>
                <field name="arch" type="xml">
                    <calendar string="Calendar Description" date_start="tgl_mulai" mode="month">
                        <!-- Add your fields here -->
                        <field name="name" filters="1"/>
                        <field name="instruktur_id"/>
                    </calendar>
                </field>
            </record>


            <!-- cdn.training.session action window -->
            <record id="cdn_training_session_action" model="ir.actions.act_window">
                <field name="name">Data Training Session</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">cdn.training.session</field>
                <field name="view_mode">list,form,calendar</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                        <!-- Add Text Here -->
                    </p><p>
                        <!-- More details about what a user can do with this object will be OK --> 
                    
                    </p>
                </field>
            </record>

            <record id="set_status_draft" model="ir.actions.server">
            <field name="name">Set Status Draft</field>
            <field name="model_id" ref="model_cdn_training_session" />
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                records.action_reset()
            </field>
        </record>

        <record id="set_status_confirm" model="ir.actions.server">
            <field name="name">Set Status Confirm</field>
            <field name="model_id" ref="model_cdn_training_session" />
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                records.action_confirm()
            </field>
        </record>

        <record id="set_status_done" model="ir.actions.server">
            <field name="name">Set Status Done</field>
            <field name="model_id" ref="model_cdn_training_session" />
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                records.action_done()
            </field>
        </record>

        <record id="set_status_reset_override" model="ir.actions.server">
            <field name="name">Testing</field>
            <field name="model_id" ref="model_cdn_training_session" />
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                records.action_reset_override()
            </field>
        </record>

            <!-- This Menu Item must have a parent and an action -->
            <menuitem id="training_menu_act" name="Data Training" parent="Pengaturan_menu_categ" action="cdn_training_session_action" sequence="20"/>

        </data>

</odoo>

