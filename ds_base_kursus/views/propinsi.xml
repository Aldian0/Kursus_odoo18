<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>
        
            <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Propinsi ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
            <!-- cdn.propinsi tree view -->
            <record id="cdn_propinsi_view_list" model="ir.ui.view">
                <field name="name">cdn.propinsi.view.list</field>
                <field name="model">cdn.propinsi</field>
                <field name="arch" type="xml">
                    <list>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="kode"/>
                        <field name="singkatan"/>
                    </list>
                </field>
            </record>
        
        <!-- cdn.propinsi form view -->
        <record id="cdn_propinsi_view_form" model="ir.ui.view">
            <field name="name">cdn.propinsi.view.form</field>
            <field name="model">cdn.propinsi</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="singkatan"/>
                            <field name="deskripsi"/>
                        </group>
                        
                         <notebook>
                            <page string="Data Kota">
                                <field name="kota_ids">
                                    <list editable= "bottom" readonly="1">
                                        <field name="name"/>
                                        <field name="kode"/>
                                        <field name="singkatan"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn.propinsi search view -->
        <record id="cdn_propinsi_view_search" model="ir.ui.view">
            <field name="name">cdn.propinsi.view.search</field>
            <field name="model">cdn.propinsi</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <!-- Add your fields here -->
                    
                </search>
            </field>
        </record>

        <!-- cdn.propinsi action window -->
        <record id="cdn_propinsi_action" model="ir.actions.act_window">
            <field name="name">Data Propinsi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.propinsi</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <menuitem id="propinsi_menu_act" name="Data Provinsi" parent="wilayah_menu_categ" action="cdn_propinsi_action" sequence="10"/>

        </data>

</odoo>
